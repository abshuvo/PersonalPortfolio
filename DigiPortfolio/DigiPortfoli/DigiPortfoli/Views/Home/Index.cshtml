<script>

    $(document).ready(function () {
        getHomepageData();
    });



    // Get all Category to display
    function getHomepageData() {
        // Call Web API to get a list of Category
        $.ajax({
            url: '../Home/GetHomePageData/',
            type: 'GET',
            dataType: 'json',
            success: function (homepagedata) {
                debugger
                $('#name').append(homepagedata.Name);

                var profession = " <span class='typed' >" + homepagedata.Profession + "</span>"
                $('#profession').append(profession);


                var skillsContent = $('#skillsContent');
                for (var i = 0; i < homepagedata.SkillsList.length; i++) {
                    var skill = homepagedata.SkillsList[i];
                    var skillHTML = `
                            <div class="col-lg-6">
                                <div class="progress">
                                    <span class="skill">${skill.SkillName} <i class="val">${skill.SkillDescription}</i></span>
                                    <div class="progress-bar-wrap">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="${parseInt(skill.SkillDescription)}" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        `;
                    skillsContent.append(skillHTML);
                }

                var links = "";
                for (var i = 0; i < homepagedata.SocialLink.length; i++)
                {
                     links = links + " <a href='" + homepagedata.SocialLink[i].SocialMediaURL + "' class='facebook' > <i class='" + homepagedata.SocialLink[i].SocialMediaName + "' > </i></a >";
                }

                  $('.social-links').append(links);
             
                
     
            },
            error: function (request, message, error) {
                debugger
                alert(message);
            }
        });
    }
</script>